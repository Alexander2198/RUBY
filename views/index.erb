<!-- views/index.erb -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Calculadora de Suma</title>
</head>
<body>
  <h1>Calculadora de Suma</h1>
  
  <!-- Formulario para ingresar los números -->
  <form action="/" method="POST">
    <label for="numero1">Número 1:</label>
    <input type="text" id="numero1" name="numero1" required>
    <br><br>
    
    <label for="numero2">Número 2:</label>
    <input type="text" id="numero2" name="numero2" required>
    <br><br>
    
    <button type="submit">Calcular</button>
  </form>

 
  <% if @suma %>
    <br><br>
    <h3>El resultado de la suma es: <%= @suma %></h3>
  <% end %>

</body>
</html>
